/* template/goodsCard/goodsCard.wxss */
.card-img{
  width:47vw;
  height: 26vh;
  border-radius: 6px;
}
.cardWord{
  margin: 0;
  font-family: arial;
  height: 56px;
  width: 46vw
}
.rtitle{
  margin-left: 4px;
  font-size: 14px;
  
}
.Address{
  font-size: 12px;
  margin-left: 4px;
}
.cardMid{
  display: flex;

}
.RRindex,.Price{
  flex: 1;
  font-size: 12px;
  margin-left: 4px;
}

.Price{
  font-size: 16px;
  color: rgb(255, 102, 50);
}

.Rindex{
  font-size: 16px;
  color: rgb(255, 139, 43);
}

.cBox-foot{
  height: 4vh;
  display: flex;
  width:46vw;
}

.cBox-foot>button{
  flex: 1;
  height:100%;
  margin-right: 4px;
  margin-left: 4px;
  padding: 0;
  position: relative;
}
.cBox-foot>button>image{
  height: 20px;
  width: 20px;
  position: absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
}
.cBox-foot>text{
  flex: 1;
  font-size: 12px;
  height: 28px;
  line-height: 28px;
}
.cBox-foot .goodCardID{
  margin-left: 2px;
  flex: 4
}